	"license": "MIT",
	"dependencies": {
		"bcryptjs": "^2.4.3",
		"dotenv": "^10.0.0",
		"express": "^4.17.1",
		"jsonwebtoken": "^8.5.1",
		"mongoose": "^5.13.5",
		"validator": "^13.6.0"
	},
	"devDependencies": {
		"@babel/cli": "^7.14.8",
		"@babel/core": "^7.14.8",
